<div class="card shadow-sm">
    <a href="@ContentUrl">
        <img class="card-img-top" src="@ImageUrl" />
    </a>
    <div class="card-body">
        <h5 class="card-title">@Content.Title</h5>
        <small class="text-muted ms-3 d-block" style="margin-top: -8px;">by <a href="@AuthorUrl">@Content.Owner</a></small>
        <p class="card-text">@Content.Description</p>
        <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
                <ContentDownloadButton Content="@Content" IsSmall="true" />
                <ContentLikeButton Content="@Content" IsSmall="true" />
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public ContentModel Content { get; set; }

    public string AuthorUrl => $"/{Content.Owner}";
    public string ContentUrl => $"/{Content.Owner}/{Content.Name}";
    public string ImageUrl => Content.ImageUrl;
    public string DownloadUrl => Content.FileUrl;
}
