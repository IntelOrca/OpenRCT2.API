@page "/{owner}/{name}"

@if (error == null && content == null)
{
    <LoadingAnimation />
}
else if (content != null)
{
    <button type="button" class="btn btn-warning float-end" title="Edit">
        <Icon Kind="pencil-fill" />
    </button>
    <h3>
        @if (content.ContentVisibility == ContentVisibility.Private)
        {
            <Icon Kind="lock-fill" />
        }
        else if (content.ContentVisibility == ContentVisibility.Unlisted)
        {
            <Icon Kind="unlock-fill" />
        }
        @content.Name
    </h3>
    <h6 class="mb-3 text-muted">by <a href="@AuthorUrl">@content.Owner</a></h6>
    <div class="row">
        <div class="col-12 col-md-7 mb-3">
            <div class="card">
                <div class="card-body">
                    <img class="w-100" src="@content.ImageUrl" />
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card mb-3">
                <div class="card-body">
                    <p class="card-text">@content.Description</p>
                </div>
            </div>
            <div class="card mb-3">
                <div class="card-body">
                    <div class="mb-2">
                        <button type="button" class="btn btn-success">
                            <Icon Kind="download" />
                            Download <span class="badge bg-light text-dark ms-3">123</span>
                        </button>
                    </div>
                    <div>
                        <button type="button" class="btn btn-primary">
                            <Icon Kind="hand-thumbs-up-fill" />
                            Like <span class="badge bg-light text-dark ms-3">123</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <Error Context="@error" />
}
